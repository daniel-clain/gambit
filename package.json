{
  "name": "gambit",
  "version": "1.0.0",
  "scripts": {

    "local-single-player": "run-p compile.local-single-player run.local-single-player",
    "fighter-sandbox": "run-s compile.fighter-sandbox run.fighter-sandbox",
    "main-game": "run-s compile.main-game run.main-game",
    
    "run.local-single-player": "webpack-dev-server --open --config config/webpack.local-single-player.config.js",
    "run.fighter-sandbox": "webpack-dev-server --open --config config/webpack.fighter-sandbox.config.js",
    "run.main-game": "nodemon --inspect=0.0.0.0:1234 compiled-code/server/server.js",
    
    "compile.local-single-player": "webpack --watch --config config/webpack.local-single-player.config.js",
    "compile.fighter-sandbox": "webpack --watch --config config/webpack.fighter-sandbox.config.js",
    "compile.main-game": "run-p compile.client.main-game compile.server.main-game",

    "compile.client.main-game": "webpack --watch --config config/webpack.client.main-game.config.js",
    "compile.server.main-game": "webpack --watch --config config/webpack.server.main-game.config.js",
    
    "compile.docker": "docker build -t balls .",
    "run.gui-tests": "jest --config config/jest.config.gui-test.js",
    "run.automated-scenarios": "jest --config config/jest.config.automated-scenarios.js",
    "run.docker": "docker run --rm -p80:4444 --ip 172.17.0.1 balls"

  },
  "dependencies": {
    "express": "^4.17.1",
    "socket.io": "^2.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.10",
    "@types/puppeteer": "^1.12.4",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/styled-components": "^4.1.16",
    "awesome-typescript-loader": "^5.2.1",
    "copy-webpack-plugin": "^5.0.3",
    "expect-puppeteer": "^4.1.1",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^5.0.0",
    "jest": "^24.8.0",
    "jest-puppeteer": "^4.2.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^1.18.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rxjs": "^6.5.2",
    "socket.io-client": "^2.2.0",
    "source-map-loader": "^0.2.4",
    "styled-components": "^4.3.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1",
    "url-loader": "^2.0.1",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5",
    "webpack-node-externals": "^1.7.2"
  }
}
