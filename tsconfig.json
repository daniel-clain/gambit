{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "isolatedModules": true,
    "allowJs": true,
    "module": "CommonJS",
    "target": "es6",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./source-code/"],
  "exclude": [
    "./source-code/**/--*",
    "./source-code/**/backup*",
    "./source-code/**/--*"
  ]
}
