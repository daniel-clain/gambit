{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "isolatedModules": true,
    "allowJs": true,
    "module": "CommonJS",
    "target": "es6",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./source-code/"],
  "exclude": ["./source-code/**/backup*", "./source-code/**/--*"]
}
