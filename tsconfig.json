{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "module": "CommonJS",
    "target": "es6",
    "jsx": "react",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": [ "./node_modules/@types" ]
  },
  "include": [
    "./source-code/"
  ],
  "exclude": [
    "./source-code/**/--*"
  ]
}